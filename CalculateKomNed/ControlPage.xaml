<Page x:Class="CalculateKomNed.ControlPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CalculateKomNed"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ControlPage">

    <Grid>
        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <Button Content="Физ. лицо" Name="btnFiz" Click="btnFiz_Click"
                    Margin="10" Width="175" Height="50" FontSize="26"
                    FontWeight="Bold"/>
            <Button Content="Юр. лицо" Name="btnUr" Click="btnUr_Click"
                    Margin="10" Width="175" Height="50" FontSize="26"
                    FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Page>
